# editorconfig.org
root = true

# TODO: require to install any package denpendent on your editor
# see these propaties at https://github.com/editorconfig/editorconfig/wiki/EditorConfig-Properties

[*]
charset = utf-8
end_of_line = lf
indent_size = 2
indent_style = space
insert_final_newline = true
max_line_length = 80
trim_trailing_whitespace = true

[*.js]
curly_bracket_next_line = false
spaces_around_operators = true
spaces_around_brackets = outside
quote_type = single

[**.min.js]
indent_style = ignore
insert_final_newline = ignore

[*.json]
insert_final_newline = ignore

[*.md]
max_line_length = 0
trim_trailing_whitespace = false
